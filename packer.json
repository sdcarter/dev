{
    "builders": [
      {
        "commit": true,
        "image": "debian:latest",
        "type": "docker"
      }
    ],
    "post-processors": [
      [
        {
          "repository": "sdcarter/dev-container",
          "tags": [
            "latest"
          ],
          "type": "docker-tag"
        },
        {
          "type": "docker-push"
        }
      ]
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "apt-get update",
          "apt-get install -y git zsh golang"
        ]
      }
    ]
  }